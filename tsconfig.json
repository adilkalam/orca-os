{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "services/**/*.ts",
    "agents/**/*.ts",
    "ext/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "mcp",
    "tools",
    "scripts",
    "skills"
  ]
}
